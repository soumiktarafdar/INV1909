<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:background="@drawable/shape_ractangle_white">

    <ImageView
        android:id="@+id/imageView_Logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/tienphong"
        android:layout_gravity="center_horizontal" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_planOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_bullet"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:drawablePadding="7dp"
        android:hint="1.6% per anum 5 years"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_planTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_bullet"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:drawablePadding="7dp"
        android:hint="1.5% per anum 7 years"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_makeRequest"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/shape_ractangle_blue"
        android:text="@string/hint_invRes_InvestNow"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>
