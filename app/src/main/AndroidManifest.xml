<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.inv.designproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.app.inv.LoginActivity"
            android:label="@string/title_Login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.inv.MainActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/TextStyle" />
        <activity
            android:name="com.app.inv.RegistrationActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="com.app.inv.ForgotPasswordActivity"
            android:theme="@style/TextStyle"/>

    </application>

</manifest>